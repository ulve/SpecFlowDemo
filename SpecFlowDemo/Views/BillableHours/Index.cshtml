@model IEnumerable<SpecFlowDemo.Models.BillableHours>

@{
    ViewBag.Title = "Fakturerbar tid";
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Lägg till ny", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Tid)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Kund)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Kommentar)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Tid)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Kund)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Kommentar)
        </td>
        <td>
            @Html.ActionLink("Ändra", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Detaljer", "Details", new { id=item.Id }) |
